pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch: 'test', url: 'https://github.com/yubomern/apptestTask.git'
            }
        }
        stage('Run Scheduler') {
            steps {
                bat 'powershell -ExecutionPolicy Bypass -File runner.ps1'
            }
        }
        stage('Archive Logs') {
            steps {
                archiveArtifacts artifacts: 'error_log.txt', allowEmptyArchive: true
            }
        }
    }
}

